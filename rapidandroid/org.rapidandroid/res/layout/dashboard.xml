<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent">
<Spinner android:id="@+id/cbx_forms" android:layout_width="fill_parent" android:layout_height="wrap_content">
</Spinner>

<TableLayout
android:id="@+id/TableLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"

android:stretchColumns="0,1"
>
<TableRow>
<TextView
android:id="@+id/lbl_formname"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/lbl_formname"
android:padding="3dip"
android:layout_weight="1" android:textStyle="bold">
</TextView>
<TextView
android:id="@+id/lbl_formprefix"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/lbl_formprefix"
android:padding="3dip"
android:layout_weight="1" android:textStyle="bold">
</TextView>
</TableRow>
<TableRow>
<TextView
android:id="@+id/txv_formname"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@+string/txv_formname"
android:padding="3dip"
android:layout_weight="1">
</TextView>
<TextView
android:id="@+id/txv_formprefix"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@+string/txv_formprefix"
android:padding="3dip"
android:layout_weight="1">
</TextView>
</TableRow>
<TextView
android:id="@+id/lbl_description"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/lbl_description"
android:padding="3dip"
android:textStyle="bold">
</TextView>
<TextView
android:id="@+id/txv_description"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@+string/txv_description"
android:padding="3dip"
>
</TextView>
<LinearLayout
android:id="@+id/FormFieldsLayout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
>
<TextView
android:id="@+id/lbl_fields"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/lbl_fields"
style="?android:attr/listSeparatorTextViewStyle"
>
</TextView>
<ListView
android:id="@+id/lsv_fields"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
</ListView>
</LinearLayout>
</TableLayout>
<TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_width="fill_parent"><RadioGroup android:id="@+id/RadioGroup01" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent" android:gravity="center_horizontal|fill" android:layout_weight="1"><RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dashboard_rad_100" android:text="@string/rad_last100" android:paddingRight="8px" android:checked="true"></RadioButton>
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rad_last500" android:id="@+id/dashboard_rad_500" android:paddingRight="8px"></RadioButton>
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dashboard_rad_all" android:text="@string/rad_all"></RadioButton>

</RadioGroup><ImageButton
            android:id="@+id/btn_switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="invisible" >
</ImageButton>
</TableRow><TextView android:id="@+id/lbl_dashboardmessages" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/lbl_dashboardmessages" style="?android:attr/listSeparatorTextViewStyle"></TextView>

<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/dashboard_headertbl"></TableLayout><ViewSwitcher android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/dashboard_switcher"><ListView android:id="@+id/lsv_dashboardmessages" android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dashboard_prog_loadingtext" android:text="Loading..." android:textSize="18sp" android:padding="8dip"></TextView>
</ViewSwitcher>
</LinearLayout>
