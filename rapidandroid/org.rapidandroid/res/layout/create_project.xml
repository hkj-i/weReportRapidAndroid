<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <EditText
	    android:id="@+id/project_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/project_name_hint"
	    android:inputType="text" />
    <EditText
	    android:id="@+id/project_id"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/project_id_hint"
	    android:inputType="text" />
    <EditText
	    android:id="@+id/project_location"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/project_location_hint"
	    android:inputType="text" />
    <EditText
	    android:id="@+id/project_description"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/project_description_hint"
	    android:inputType="text" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_saveProject" 
        android:onClick="saveProject"/>
</LinearLayout>